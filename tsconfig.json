{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}